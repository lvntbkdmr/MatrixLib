# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{h,cpp,hpp}]
indent_style = space
indent_size = 4

[*.{md,rst}]
indent_size = 2
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
